<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.examples.medicinetracker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MedicineTracker">
        <activity
            android:name=".affirmations.AffirmationsActivity"
            android:exported="false"
            android:theme="@style/Theme.MedicineTracker"/>
        <activity
            android:name=".DisplayMedicinesDetails"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".AddMedication"
            android:exported="true"
            android:theme="@style/Theme.MedicineTracker" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.MedicineTracker"/>
        <activity
            android:name=".HealthQuizActivity"
            android:exported="true"
            android:theme="@style/Theme.MedicineTracker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>